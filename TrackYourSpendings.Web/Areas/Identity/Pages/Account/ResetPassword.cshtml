@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h1>@ViewData["Title"]</h1>
<h2>Reset your password.</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" hidden/>
            <div class="form-floating mb-3">
                <input id="email" asp-for="Input.Email" type="email" class="form-control" 
                       autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label for="email" asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="password" asp-for="Input.Password" type="password" class="form-control" 
                       autocomplete="new-password" aria-required="true" placeholder="Please enter your password."/>
                <label for="password" asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input id="confirmPassword" asp-for="Input.ConfirmPassword" type="password" class="form-control" 
                       autocomplete="new-password" aria-required="true" placeholder="Please confirm your password."/>
                <label for="confirmPassword" asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}