@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label for="inputOldPassword" asp-for="Input.OldPassword" class="form-label">Old Password</label>
                <input id="inputOldPassword" asp-for="Input.OldPassword" type="password" class="form-control" 
                       autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label for="newOldPassword" asp-for="Input.NewPassword" class="form-label">New Password</label>
                <input id="newOldPassword" asp-for="Input.NewPassword" type="password" class="form-control" 
                       autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label for="confirmOldPassword" asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                <input id="confirmOldPassword" asp-for="Input.ConfirmPassword" type="password" class="form-control" 
                       autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password."/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-success">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
